@FacesConverter(value = "dateToLocalDateConverter", managed = true)
public class DateToLocalDateConverter implements Converter<Date> {

    private static final DateTimeFormatter FORMATTER = DateTimeFormatter.ofPattern("dd-MM-yyyy");
    private static final ZoneId ZONE = ZoneId.systemDefault();

    @Override
    public Date getAsObject(FacesContext context, UIComponent component, String value) {
        if (value == null || value.trim().isEmpty()) return null;
        LocalDate localDate = LocalDate.parse(value, FORMATTER);
        return Date.from(localDate.atStartOfDay(ZONE).toInstant());
    }

    @Override
    public String getAsString(FacesContext context, UIComponent component, Date value) {
        if (value == null) return "";
        LocalDate localDate = value.toInstant().atZone(ZONE).toLocalDate();
        return localDate.format(FORMATTER);
    }
}
